{
    "name": "docker-scan",
    "version": "1.0.4",
    "description": "Scan filesystem directory for Dockerfiles and create metadata output.",
    "author": {
        "name": "Peter Placzek",
        "email": "contact@tada5hi.net",
        "url": "https://github.com/tada5hi"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/tada5hi/docker-scan.git"
    },
    "main": "dist/index.cjs",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        }
    },
    "files": [
        "dist/"
    ],
    "scripts": {
        "build:types": "tsc --emitDeclarationOnly",
        "build:js": "rollup -c",
        "build": "rimraf dist && npm run build:types && npm run build:js",
        "test": "cross-env NODE_ENV=test jest --config ./test/jest.config.js",
        "test:coverage": "cross-env NODE_ENV=test jest --config ./test/jest.config.js --coverage",
        "prepublishOnly": "npm run build",
        "lint": "eslint --ext .js,.vue,.ts ./src",
        "lint:fix": "npm run lint -- --fix"
    },
    "keywords": [
        "docker",
        "image",
        "scan",
        "metadata",
        "groups"
    ],
    "license": "MIT",
    "devDependencies": {
        "@rollup/plugin-node-resolve": "^15.1.0",
        "@swc/core": "^1.3.61",
        "@tada5hi/eslint-config-typescript": "^1.1.9",
        "@tada5hi/semantic-release": "^0.1.0",
        "@tada5hi/tsconfig": "^0.4.0",
        "@types/jest": "^29.5.2",
        "@types/node": "^20.2.5",
        "cross-env": "^7.0.3",
        "eslint": "^8.41.0",
        "jest": "^29.5.0",
        "rimraf": "^5.0.1",
        "rollup": "^3.23.0",
        "semantic-release": "^21.1.1",
        "ts-jest": "^29.1.0",
        "typescript": "^5.0.4"
    },
    "dependencies": {
        "locter": "^1.1.2",
        "smob": "^1.4.0"
    }
}
